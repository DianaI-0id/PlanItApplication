<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Add Resources Here -->
	<!--Палитра Бело-серых оттенков (тёмная тема)-->
	<Color x:Key="SecondaryDark">#1E1E1E</Color>
	<Color x:Key="SecondaryMiddleDark">#2A2A2A</Color>
	<Color x:Key="SecondaryMiddle">#333333</Color>
	<Color x:Key="SecondaryMiddleLight">#3D3D3D</Color>
	<Color x:Key="SecondaryLight">#4A4A4A</Color>

	<LinearGradientBrush x:Key="ItemBackgroundGradient" StartPoint="0%, 0%" EndPoint="100%, 0%">
		<GradientStop Offset="0" Color="{DynamicResource PrimaryBackground}"/>
		<GradientStop Offset="1" Color="{DynamicResource SecondaryDark}"/>
	</LinearGradientBrush>
	<!-- 50% прозрачный чёрный -->

	<!--Оттенки красного заменены на космический синий-->
	<Color x:Key="PrimaryDark">#2B4F7D</Color>
	<Color x:Key="MiddleDark">#3A6EA5</Color>
	<Color x:Key="Middle">#3B2E7E</Color>
	<!-- темный сине-фиолетовый -->
	<Color x:Key="MiddleLight">#5A4DA3</Color>
	<!-- светлый сине-фиолетовый -->
	<Color x:Key="Light">#7AB8FF</Color>

	<Color x:Key="SideMenuLight">#3D3D3D</Color>
	<Color x:Key="SideMenuMiddle">#2A2A2A</Color>

	<!--Чёрный фон-->
	<Color x:Key="PrimaryBackground">#121212</Color>

	<!--Цвет текста под кнопкой-->
	<Color x:Key="PrimaryButtonForeground">#FFFFFF</Color>

	<!--Светло-серый текст-->
	<Color x:Key="PrimaryForeground">#E0E0E0</Color>

	<LinearGradientBrush x:Key="ButtonBackgroundGradient" StartPoint="0%, 0%" EndPoint="100%, 0%">
		<GradientStop Offset="0" Color="{DynamicResource Middle}"/>
		<GradientStop Offset="1" Color="{DynamicResource MiddleLight}"/>
	</LinearGradientBrush>

	<!--Заливка бокового меню-->
	<LinearGradientBrush x:Key="SideMenuGradient" StartPoint="0%, 0%" EndPoint="100%, 0%">
		<GradientStop Offset="0.8" Color="{DynamicResource SecondaryDark}"/>
		<GradientStop Offset="1" Color="{DynamicResource SecondaryMiddleDark}"/>
	</LinearGradientBrush>

	<Color x:Key="ShadowColor">#3B2E7E</Color>

	<x:String x:Key="HorizontalLogoIcon">/Assets/Images/DarkPurpleTheme/horizPurpleLogo.svg</x:String>
	<x:String x:Key="RoundLogoIcon">/Assets/Images/DarkPurpleTheme/logoroundPurple.svg</x:String>
	<x:String x:Key="LoginImage">/Assets/Images/DarkPurpleTheme/loginImagePurple.svg</x:String>
	<x:String x:Key="TurnOffIcon">/Assets/Images/DefaultTheme/turnOff.svg</x:String>

	<x:String x:Key="CommunityIcon">/Assets/Images/DefaultTheme/communityIcon.svg</x:String>
	<x:String x:Key="GroupGoalIcon">/Assets/Images/DefaultTheme/groupGoalIcon.svg</x:String>
	<x:String x:Key="GoalIcon">/Assets/Images/DefaultTheme/goalIcon.svg</x:String>
	<x:String x:Key="TaskIcon">/Assets/Images/DefaultTheme/taskIcon.svg</x:String>
	<x:String x:Key="ProfileIcon">/Assets/Images/DefaultTheme/profileIcon.svg</x:String>
	<x:String x:Key="MyPostsIcon">/Assets/Images/DefaultTheme/myPosts.svg</x:String>
	<x:String x:Key="HistoryIcon">/Assets/Images/DefaultTheme/historyIcon.svg</x:String>
	<x:String x:Key="AnalyticsIcon">/Assets/Images/DefaultTheme/analyticsIcon.svg</x:String>
	<x:String x:Key="MyDiscountsIcon">/Assets/Images/DefaultTheme/myDiscountsIcon.svg</x:String>
	<x:String x:Key="NewsIcon">/Assets/Images/DefaultTheme/newsIcon.svg</x:String>
	<x:String x:Key="SubscriptionIcon">/Assets/Images/DefaultTheme/subscriptionIcon.svg</x:String>
	<x:String x:Key="LoyaltyIcon">/Assets/Images/DefaultTheme/loyaltyIcon.svg</x:String>
	<x:String x:Key="LogoutIcon">/Assets/Images/DefaultTheme/logoutIcon.svg</x:String>
	<x:String x:Key="AddIcon">/Assets/Images/DefaultTheme/addIcon.svg</x:String>
	<x:String x:Key="OptionsIcon">/Assets/Images/DarkPurpleTheme/settingsPurple.svg</x:String>
	<x:String x:Key="ShowMore">/Assets/Images/DefaultTheme/showMoreIcon.svg</x:String>
	<x:String x:Key="EditIcon">/Assets/Images/DefaultTheme/editIcon.svg</x:String>
	<x:String x:Key="DeleteIcon">/Assets/Images/DefaultTheme/deleteIcon.svg</x:String>

	<Bitmap x:Key="RelaxIllustration">/Assets/Images/DarkPurpleTheme/relaxPurpleImage.jpg</Bitmap>

	<FontFamily x:Key="Montserrat">/Assets/Fonts/Montserrat-Regular.ttf#Montserrat</FontFamily>
	<FontFamily x:Key="Uncage">/Assets/Fonts/Uncage-Bold.ttf#Uncage</FontFamily>

	<LinearGradientBrush x:Key="DialogWindowGradient" StartPoint="0%, 0%" EndPoint="100%, 0%">
		<GradientStop Offset="0.5" Color="{DynamicResource SideMenuLight}"/>
		<GradientStop Offset="1" Color="{DynamicResource SideMenuMiddle}"/>
	</LinearGradientBrush>
</ResourceDictionary>
