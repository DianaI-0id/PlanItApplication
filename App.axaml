<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Diploma_Ishchenko.App"
			 xmlns:local="clr-namespace:Diploma_Ishchenko"
             RequestedThemeVariant="Light">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

	<Application.Resources>
		<ResourceDictionary>
			<local:ShadowColorConverter x:Key="ShadowConverter" />
			<!-- Цвет тени (можно переопределять в темах) -->
		</ResourceDictionary>
	</Application.Resources>
	
    <Application.Styles>
        <FluentTheme />
		<StyleInclude Source="Styles/AppDefaultStyle.axaml"></StyleInclude>
    </Application.Styles>
</Application>